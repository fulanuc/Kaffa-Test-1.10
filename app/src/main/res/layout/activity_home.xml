<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="36dp"
    tools:context=".HomeActivity">

    <Button
        android:id="@+id/cnpj"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Validate CNPJ"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/rectangles_intersect"
        android:onClick="goToValidator"
        />

    <Button
        android:id="@+id/rectangles_intersect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="rectangles intersect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cnpj"
        app:layout_constraintBottom_toTopOf="@id/area_intersection"
        android:onClick="goToRectangles"
        />

    <Button
        android:id="@+id/area_intersection"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="area intersection"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rectangles_intersect"
        app:layout_constraintBottom_toTopOf="@id/todo_list"
        android:onClick="goToAreaIntersect"
        />

    <Button
        android:id="@+id/todo_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="todo list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/area_intersection"
        app:layout_constraintBottom_toBottomOf="parent"
        android:onClick="goToList"
        />





</androidx.constraintlayout.widget.ConstraintLayout>